{
  "compilerOptions": {
    "target": "ES2017",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "lib",    
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "lib",                      
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "tests"
  ]
}